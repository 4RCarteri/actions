[sqlfluff]
dialect = ansi
templater = jinja
sql_file_exts = .sql,.SQL
exclude_rules = L016,L031
max_line_length = 120

[sqlfluff:indentation]
indent_unit = space
tab_space_size = 4

[sqlfluff:rules]
capitalisation_policy = upper
single_table_references = consistent
unquoted_identifiers_policy = all

[sqlfluff:rules:L010]
capitalisation_policy = upper

[sqlfluff:rules:L014]
capitalisation_policy = upper

[sqlfluff:rules:L030]
capitalisation_policy = upper

[sqlfluff:rules:L040]
capitalisation_policy = upper

[sqlfluff:rules:L042]
forbid_subquery_in = both

[sqlfluff:rules:L047]
prefer_count_1 = false

[sqlfluff:rules:L052]
multiline_newline = false

[sqlfluff:rules:L054]
group_by_and_order_by_style = implicit
